<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_path_segment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#A5D6A7" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_locked"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="#D0D0D0"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_lock"
            app:tint="@color/white" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_milestone_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Milestone Berikutnya"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="@id/card_locked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/card_locked"
        app:layout_constraintTop_toTopOf="@id/card_locked" />

</androidx.constraintlayout.widget.ConstraintLayout>