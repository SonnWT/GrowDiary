<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:visibility="gone">

    <View
        android:id="@+id/overlay_background_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_selection_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationZ="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_manage_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage Joseph's Profile"
                    android:textColor="@android:color/white"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_centerInParent="true"
                    app:cornerRadius="24dp"
                    app:backgroundTint="@color/orange" />

                <ImageView
                    android:id="@+id/btn_close_dialog"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_close"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:padding="4dp"
                    android:contentDescription="Tutup"
                    android:clickable="true"
                    android:focusable="true"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/profile_joseph_in_popup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/profile_item_bg"
                android:gravity="center_vertical"
                android:paddingEnd="12dp" android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/orange_left_rectangle"
                    android:padding="12dp"> <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/profile_joseph"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Circle" />
                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Joseph"
                    android:layout_marginStart="16dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_christopher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/profile_item_bg"
                android:gravity="center_vertical"
                android:paddingEnd="12dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/orange_left_rectangle"
                    android:padding="12dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/profile_joseph"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Circle" />
                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Christopher Setiawan"
                    android:layout_marginStart="16dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_michael"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/profile_item_bg"
                android:gravity="center_vertical"
                android:paddingEnd="12dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/orange_left_rectangle"
                    android:padding="12dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/profile_joseph"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Circle" />
                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Michael Onasis Hasri"
                    android:layout_marginStart="16dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_gandhi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/profile_item_bg"
                android:gravity="center_vertical"
                android:paddingEnd="12dp"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/orange_left_rectangle"
                    android:padding="12dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/profile_joseph"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Circle" />
                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Gandhi Winata Susilo"
                    android:layout_marginStart="16dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>