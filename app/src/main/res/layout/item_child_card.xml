<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/top_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#FAEBD7"
            app:layout_constraintBottom_toTopOf="@id/bottom_section"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_child_photo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:padding="4dp"
            app:strokeColor="@android:color/white"
            app:strokeWidth="2dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_child_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="Nama Anak Anda"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tv_child_birthdate"
            app:layout_constraintEnd_toStartOf="@id/btn_child_menu"
            app:layout_constraintStart_toEndOf="@id/iv_child_photo"
            app:layout_constraintTop_toTopOf="@id/iv_child_photo"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tv_child_birthdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="99 Februari 9000"
            app:layout_constraintBottom_toBottomOf="@id/iv_child_photo"
            app:layout_constraintEnd_toEndOf="@id/tv_child_name"
            app:layout_constraintStart_toStartOf="@id/tv_child_name"
            app:layout_constraintTop_toBottomOf="@id/tv_child_name" />


        <ImageButton
            android:id="@+id/btn_child_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Menu Opsi Anak"
            android:src="@android:drawable/ic_menu_more"
            app:layout_constraintBottom_toBottomOf="@id/tv_child_birthdate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_child_name" />

        <LinearLayout
            android:id="@+id/bottom_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/iv_child_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:background="#F08080"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Year" android:textColor="@android:color/white" android:textSize="12sp"/>
                    <TextView android:id="@+id/tv_age_years" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4" android:textColor="@android:color/white" android:textSize="48sp" android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Month" android:textColor="@android:color/white" android:textSize="12sp"/>
                    <TextView android:id="@+id/tv_age_months" android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="10" android:textColor="@android:color/white" android:textSize="48sp" android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Day" android:textColor="@android:color/white" android:textSize="12sp"/>
                    <TextView android:id="@+id/tv_age_days" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="25" android:textColor="@android:color/white" android:textSize="48sp" android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="#CD5C5C"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Laki - Laki"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/tv_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="100 cm"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="50 kg"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>